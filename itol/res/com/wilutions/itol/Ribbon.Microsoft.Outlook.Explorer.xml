<?xml version="1.0" encoding="utf-8"?>
<customUI onLoad="onLoadRibbon"
	xmlns="http://schemas.microsoft.com/office/2009/07/customui">

	<ribbon>
		<tabs>
			<tab idMso="TabMail">
				<group id="grpIssue" label="Tracker" getVisible="Button_getVisible">
					<!-- Icon from http://www.doublejdesign.co.uk http://www.iconarchive.com/show/childish-icons-by-double-j-design.html -->
					<toggleButton id="bnNewIssue" tag="Alert-icon-32.png"
						size="large" getLabel="Button_getLabel" onAction="Button_onAction"
						getEnabled="Button_getEnabled" getVisible="Button_getVisible"
						getImage="getRibbonIcon" getPressed="Button_getPressed" />
				</group>
			</tab>
			<tab id="RedmineTab" label="Redmine Addin">
				<group id="Group1" label="Configure">
					<button id="bnConnect" getImage="getRibbonIcon" size="large"
						tag="Connect32.png" label="Button_getLabel" onAction="Button_onAction" />
					<comboBox id="cbAttachMailAs" getItemCount="ComboBox_getItemCount"
						getText="ComboBox_getText" getItemLabel="ComboBox_getItemLabel"
						onChange="ComboBox_onChange" />
				</group>
			</tab>
		</tabs>
	</ribbon>

</customUI>


